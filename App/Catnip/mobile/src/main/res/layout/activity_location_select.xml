<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cs160.mleefer.PoliticalCompass.LocationSelect"
    android:background="#2979ff">

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="273dp"
        android:layout_gravity="center"
        android:background="#ef5350"
        android:clickable="true"
        android:id="@+id/gps_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Find my polititians!"
            android:id="@+id/textView2"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="15dp"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:src="@drawable/orange_pin"
            android:layout_marginBottom="20dp" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Political Compass"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal|top"
        android:textSize="32dp"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:id="@+id/imageView3"
        android:layout_gravity="left|top"
        android:src="@drawable/white_star_md"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="7dp" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:id="@+id/imageView4"
        android:layout_gravity="right|top"
        android:src="@drawable/white_star_md"
        android:layout_marginTop="30dp"
        android:layout_marginRight="7dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/postal_address"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="60dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Find by zip code"
        android:id="@+id/postal_button"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="goToRepsView" />
</FrameLayout>
